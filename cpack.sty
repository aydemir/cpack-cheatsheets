% fix up the headings
\setcounter{secnumdepth}{2}
\usepackage[calcwidth]{titlesec}
\titleformat{\section}[hang]{}{}{0pt}{\Large\thesection.~\raggedright}[]
\titleformat{\subsection}[hang]{}{}{0pt}{\large\thesubsection~\raggedright}[]

